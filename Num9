// Experiment 2 - Num 9
#include <iostream>
#include <conio.h>

using namespace std;
int main()
{
    int x, y;
    	cout << "Creating a box using asterisks." << endl;
		
	    cout << "Enter number of rows (x): \t";
	    cin >> x;
  
	    cout  << "Enter number of columns (y): \t ";
	    cin >> y;
	    cout << "Output: " << endl;
	    
     for(int a=1;a<=x+1;a++)
        {
            cout<<"*";
        }
            cout<<endl;
for(int b=1;b<=x;b++)
    {
    for(int c=1;c<=1;c++)
        {
                cout<<"*";
        }
        for(int d=1;d<=(x-1);d++)
              {
                cout<<" ";
              }
                cout<<"*"<<endl;
       }
for(int e=1;e<=y+1;e++)
 {
 cout<<"*";
 }
 _getch();
 return 0;
}


