// Montes, Experiment 2 num2.
#include <iostream>
#include <conio.h>

using namespace std;

int main()
{
    int package, packageA, packageB, packageC, addtlusage;
      packageA = 995;
      packageB = 1495;
      packageC = 1995;
    
    cout << " OneSixteen Internet Provider Website. " << endl;
    cout << " Guide for checking total monthly bill: " << endl;
    cout << " Type 1 for Package A \n Type 2 for Package B \n Type 3 for Package C." << endl;
    cout << "---------------------------------------------------------------" << endl;
    
    {
        cout << " Enter the number corresponding to Package Subscription: \t" ;
        cin >> package;
        cout << " Enter additional hours of usage: \t" ;
        cin >> addtlusage;
        
        if (package == 1)
            cout << " Total Monthly Bill = \t" << packageA + (addtlusage * 20) << endl;
        
        else if (package == 2)
            cout << " Total Monthly Bill = \t" << packageB + (addtlusage * 10) << endl;
        
        else if (package == 3)
            cout << " Total Monthly Bill = \t" << packageC << endl;
        
        else
            cout << " Your input is invalid." << endl;
    }
    
    cout << "Thank you and have a nice day!" << endl;
    
    return 0;
}
