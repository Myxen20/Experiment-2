// Experiment 2, number 3
#include <iostream>
#include <conio.h>
#include <cmath>
using namespace std;

int main()
{
  int x, y;
  float z, s, vpos;
  z = 2.5;
  
  cout << " enter value of x \t" ;
    cin >> x;
    
  switch (x)
 {
     case 1: 
        cout << " value of x is 1 \n ";
        { 
            cout << " enter value of y \t";
            cin >> y;
            if ( y > 1) 
                cout << " V = " << x * y * z << endl;
            else if ( y < 5)
                cout << " V = " << x * y * z << endl;
            else if ( y >= 5 )
                cout << " V = " << x + y/z << endl;
            else 
                cout << " V = " << x + y + z << endl;
        }
        break;
    
     case 2:
        cout << " value of x is 2 ";
        cout << "        \n" ;
        { 
            cout << " enter value of y \t" ;
            cin >> y;
            vpos -= (x-y)/z;
            s = x - sqrt(y+z);
            
            if (y <= 5)
               cout << " V = " << vpos << endl;
        
            else if (y >5)
                cout << " V = " << s << endl;
                
            else
                cout << " V = " << x + y + z << endl;
        }
        
    
        break;
        
     case 3:
        cout << " values of x is less than 1 or greater than 2 \n" ;
        { 
            cout << " enter value of y \t" ;
                cin >> y;
            cout << " \n" ;
            cout << " V = " << x + y + z << endl;
        }
        
        break;
 }   
 

getch();
return 0;
}


